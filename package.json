{
  "name": "my-custom-lms",
  "version": "1.0.0-fork",
  "description": "Custom fork of Frappe Learning - Enhanced Learning Management System with additional features",
  "type": "module",
  "workspaces1": [
    "frappe-ui",
    "frontend"
  ],
  "scripts": {
    "test-local": "cypress open --e2e --browser chrome",
    "postinstall": "cd frontend && npm install",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "pm2 start ecosystem.config.json",
    "start:prod": "pm2 start ecosystem.production.json",
    "stop": "pm2 stop ecosystem.config.json",
    "stop:prod": "pm2 stop ecosystem.production.json",
    "restart": "pm2 restart ecosystem.config.json",
    "restart:prod": "pm2 restart ecosystem.production.json",
    "logs": "pm2 logs --nostream",
    "status": "pm2 status"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nakamura-mujinki/lms.git"
  },
  "author": "Nakamura Mujinki (Fork of Frappe LMS)",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nakamura-mujinki/lms/issues"
  },
  "homepage": "https://github.com/nakamura-mujinki/lms#readme",
  "keywords": [
    "lms",
    "learning",
    "education",
    "frappe",
    "vue",
    "custom-fork"
  ],
  "devDependencies": {
    "cypress": "^14.5.2",
    "cypress-file-upload": "^5.0.8",
    "cypress-real-events": "^1.14.0",
    "vite-plugin-pwa": "^1.0.2"
  },
  "dependencies": {
    "pre-commit": "^1.2.2"
  }
}
