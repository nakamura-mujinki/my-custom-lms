{
  "apps": [
    {
      "name": "custom-lms-frontend",
      "script": "npm",
      "args": "run dev",
      "cwd": "./frontend",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8080,
        "HOST": "0.0.0.0"
      },
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "400M",
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "5s",
      "kill_timeout": 5000,
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}